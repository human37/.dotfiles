## Window
mouse-hide-while-typing = true

## Clipboard
clipboard-read = "allow"
clipboard-paste-protection = false

## Background
#background-opacity = 0.95
background-blur-radius = 20 

## Theme
theme = dark:Framer,light:ayu_light
font-family =  MonaspiceNe NFM Medium
font-size = 16
font-thicken
cursor-style = underline


## Keybindings
keybind = global:option+space=toggle_quick_terminal

## Quick Terminal 
quick-terminal-screen = macos-menu-bar
quick-terminal-autohide = false
quick-terminal-animation-duration = 0


## Icon
macos-icon = custom-style
macos-icon-frame = plastic
macos-icon-ghost-color = blue
macos-icon-screen-color = blue


# Startup
command = /opt/homebrew/bin/tmux new -A -s dev
